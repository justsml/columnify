{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "ES6",
    "lib": ["es6"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "types": [],
    "noEmit": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.d.ts", "test/**/*", "./*.js"],
}
